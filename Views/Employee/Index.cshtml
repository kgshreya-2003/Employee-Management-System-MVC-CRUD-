@model List<Employee>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: #f0f2f5;
        color: #333;
        padding: 30px;
    }

    h2 {
        color: #222;
        margin-bottom: 25px;
        font-weight: 700;
        letter-spacing: 1px;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        padding: 10px 20px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
        transition: background-color 0.3s ease;
        box-shadow: 0 2px 6px rgba(0, 123, 255, 0.4);
        display: inline-block;
        margin-bottom: 20px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            box-shadow: 0 4px 10px rgba(0, 86, 179, 0.5);
        }

    table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 12px;
        background-color: white;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        border-radius: 10px;
        overflow: hidden;
    }

    th, td {
        padding: 15px 20px;
        text-align: left;
    }

    th {
        background-color: #007bff;
        color: white;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }

    td {
        border-bottom: 1px solid #eee;
        vertical-align: middle;
    }

    tr:hover td {
        background-color: #f9faff;
    }

    .actions a {
        margin-right: 12px;
        font-weight: 600;
        color: #007bff;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .actions a:hover {
            color: #0056b3;
            text-decoration: underline;
        }
</style>

<h2>Employee List</h2>

<a href="@Url.Action("Create")" class="btn-primary">+ Create New Employee</a>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Department</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.Id</td>
                <td>@emp.Name</td>
                <td>@emp.Department</td>
                <td>@emp.Email</td>
                <td class="actions">
                    <a href="@Url.Action("Edit", new { id = emp.Id })">Edit</a>
                    <a href="@Url.Action("Delete", new { id = emp.Id })" style="color: #dc3545;">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
