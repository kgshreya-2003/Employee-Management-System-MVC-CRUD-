@model Employee

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: #f0f2f5;
        color: #333;
        padding: 30px;
        max-width: 450px;
        margin: auto;
    }

    h2 {
        color: #dc3545; /* danger red */
        font-weight: 700;
        margin-bottom: 20px;
        text-align: center;
    }

    p {
        font-size: 18px;
        text-align: center;
        margin-bottom: 30px;
    }

    strong {
        color: #000;
    }

    form {
        text-align: center;
    }

    button {
        background-color: #dc3545;
        color: white;
        padding: 12px 25px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-weight: 700;
        font-size: 16px;
        margin-right: 15px;
        transition: background-color 0.3s ease;
    }

        button:hover {
            background-color: #a71d2a;
        }

    a.cancel-link {
        font-weight: 600;
        color: #6c757d;
        text-decoration: none;
        font-size: 16px;
        padding: 12px 25px;
        border-radius: 8px;
        border: 1px solid #6c757d;
        transition: all 0.3s ease;
    }

        a.cancel-link:hover {
            background-color: #6c757d;
            color: white;
        }
</style>

<h2>Delete Employee</h2>

<p>Are you sure you want to delete employee: <strong>@Model.Name</strong>?</p>

@using (Html.BeginForm("DeleteConfirmed", "Employee", new { id = Model.Id }, FormMethod.Post))
{
    <button type="submit">Yes, Delete</button>
    <a href="@Url.Action("Index")" class="cancel-link">Cancel</a>
}
